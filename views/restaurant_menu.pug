extends index

block content

  p 
    a(href='/restaurant/'+restaurant_info.name) &lt; Back

  h1(class="heading")= menu_info.name

  div.menu-container
    each item in item_list
      div.menu-item
        p #{item.name}
        p #{item.price}
        p #{item.description}
    else
      p This menu has no items.
extends layout

block content

    h4= user_info.username

    h5= message

    h5 editing a restaurant

    p
        a(href='/user/'+user_info.username+'/restaurant/'+restaurant_info.name+'/delete') Remove

    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input.form-control(type='text', placeholder=restaurant_info.name name='name' value=(undefined===restaurant ? '' : restaurant.name) )
        div.form-group
            label(for='address') Address:
            input.form-control(type='text', placeholder=restaurant_info.address name='address' value=(undefined===restaurant? '' : restaurant.address) )
        div.form-group
            label(for='phone') Phone:
            input.form-control(type='text', placeholder=restaurant_info.number name='number' value=(undefined===restaurant? '' : restaurant.number) )
        button.btn.btn-outline-success(type='submit') Update
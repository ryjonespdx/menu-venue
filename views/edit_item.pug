extends layout

block content

    h4= user_info.username

    h5= message

    h5 editing an item

    p
        a(href='/user/restaurant/'+restaurant_info.name+'/menu/'+menu_info.name+'/item/'+item_info.name+'/delete') Remove

    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input.form-control(type='text', placeholder=item_info.name name='name' value=(undefined===item? '' : item.name) )
        div.form-group
            label(for='price') Price:
            input.form-control(type='text', placeholder=item_info.price name='price' value=(undefined===item? '' : item.price) )
        div.form-group
            label(for='description') Descriptton:
            input.form-control(type='text', placeholder=item_info.description name='description' value=(undefined===item? '' : item.description) )
        button.btn.btn-outline-success(type='submit') Update
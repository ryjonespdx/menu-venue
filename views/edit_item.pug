extends layout

block content

    h4= menu_info.name

    h5= message

    h5 editing an item

    p
        a(href='/user/'+user_info.username+'/restaurant/'+restaurant_info.name+'/menu/'+menu_info.name+'/item/'+item_info.name+'/delete') Remove

    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input.form-control(type='text', placeholder=item_info.name name='name' value=(undefined===item_info ? '' : item_info.name) )
        div.form-group
            label(for='price') Price:
            input.form-control(type='text', placeholder=item_info.price name='price' value=(undefined===item_info? '' : item_info.price) )
        div.form-group
            label(for='description') Descriptton:
            input.form-control(type='text', placeholder=item_info.description name='description' value=(undefined===item_info ? '' : item_info.description) )
        button.btn.btn-outline-success(type='submit') Update
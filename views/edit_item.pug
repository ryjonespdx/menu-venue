extends layout

block content

    h4= item_info.name

    h6= message

    h5 Editing This Item

    p
        a(href='/user/restaurant/'+restaurant_info.name+'/menu/'+menu_info.name+'/item/'+item_info.name+'/delete') Remove

    form(method='POST' action='')
        div.form-group
            label(for='category') Category:
            select.form-control(type='text' aria-label='category' name='category' required='true')
                if item_info.category === 'Appetizer'
                    option(selected) Appetizer
                else
                    option Appetizer
                if item_info.category === 'Entree'
                    option(selected) Entree
                else
                    option Entree
                if item_info.category === 'Sides'
                    option(selected) Sides
                else
                    option Sides
                if item_info.category === 'Dessert'
                    option(selected) Dessert
                else
                    option Dessert
                if item_info.category === 'Alcohol'
                    option(selected) Alcohol
                else
                    option Alcohol
                if item_info.category === 'Drink'
                    option(selected) Drink
                else
                    option Drink
        div.form-group
            label(for='name') Name:
            input.form-control(type='text' aria-label='name' placeholder=item_info.name name='name' value=(undefined===item_info ? '' : item_info.name) required=true)
        div.form-group
          label(for='price') Price:
            //- currency formatting from https://codepen.io/559wade/pen/LRzEjj?editors=1000
            input.form-control(type='text' aria-label='price' pattern=`^\\$\\d{1,3}(,\\d{3})*(\\.\\d+)?$` placeholder=item_info.price name='price' required='true' value=item_info.price data-type="currency")
        div.form-group
            label(for='description') Descriptton:
            input.form-control(type='text' aria-label='description' placeholder=item_info.description name='description' value=(undefined===item_info ? '' : item_info.description) )
        button.btn.btn-outline-success(type='submit' value='submit') Update

    script(defer="" src="/javascript/formatCurrency.js")
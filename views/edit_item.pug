extends layout

block content

    h4= item_info.name

    h6= message

    h5 Editing This Item

    p
        a(href='/user/restaurant/'+restaurant_info.name+'/menu/'+menu_info.name+'/item/'+item_info.name+'/delete') Remove

    form(method='POST' action='')
        div.form-group
            label(for='name') Name:
            input.form-control(type='text' aria-label='name' placeholder=item_info.name name='name' value=(undefined===item_info ? '' : item_info.name) required=true)
        div.form-group
          label(for='price') Price:
            //- currency formatting from https://codepen.io/559wade/pen/LRzEjj?editors=1000
            input.form-control(type='text' aria-label='price' pattern=`^\\$\\d{1,3}(,\\d{3})*(\\.\\d+)?$` placeholder='$5.00' name='price' required='true' value=(undefined===item ? '' : item.price) data-type="currency")
        div.form-group
            label(for='description') Descriptton:
            input.form-control(type='text' aria-label='description' placeholder=item_info.description name='description' value=(undefined===item_info ? '' : item_info.description) )
        button.btn.btn-outline-success(type='submit' value='submit') Update

    script(defer="" src="/javascript/formatCurrency.js")
extends layout

block content

  p 
    a(href='/user/restaurant/'+restaurant_info.name) &lt; Back

  h4(class="user-heading")= menu_info.name

  each item in menu
    p #{item.name}
    p &dollar;#{item.price}
    p #{item.description}
    p 
      a(href='/user/restaurant/'+restaurant_info.name+'/menu/'+menu_info.name+'/item/'+item.name+'/update') update item 

    hr

  else
    p You have no items.

  a(href='/user/restaurant/'+restaurant_info.name+'/menu/'+menu_info.name+'/item/create') create item

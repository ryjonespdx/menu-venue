extends layout

block content

  h4= restaurant_info.name

    dl
      each menu in menu_list
        dt 
          a(href='/user/'+user_info.username+'/restaurant/'+restaurant_info.name+'/menu/'+menu.name) #{menu.name}
        dd
          a(href='/user/'+user_info.username+'/restaurant/'+restaurant_info.name+'/menu/'+menu.name+'/update') update menu

      else
        p You have no menus.
      
      p
        a(href='/user/'+user_info.username+'/restaurant/'+restaurant_info.name+'/menu/create') create menu

extends layout

block content

  h4= restaurant_info.name

    dl
      each menu in menu_list
        dt 
          a(href='/user/'+user_info.id+'/restaurant/'+restaurant_info.id+'/menu/'+menu.id) #{menu.name}
        dd #{menu.description}
        dd
          a(href='/user/'+user_info.id+'/restaurant/'+restaurant_info.id+'/menu/'+menu.id+'/update') update menu
        dd
          a(href='/user/'+user_info.id+'/restaurant/'+restaurant_info.id+'/menu/'+menu.id+'/delete') delete menu

      else
        p You have no menus.
      
      p
        a(href='/user/'+user_info.id+'/restaurant/'+restaurant_info.id+'/menu/create') create menu
